CMAKE_OPTIONS="$CMAKE_OPTIONS -DWITHOUT_AUTH_PAM_STORAGE_ENGINE=1"
CMAKE_OPTIONS="$CMAKE_OPTIONS -DWITHOUT_AUTH_PAM_COMPAT_STORAGE_ENGINE=1"

install_package "Percona-Server-5.5.32-rel31.0" "http://www.percona.com/downloads/Percona-Server-5.5/Percona-Server-5.5.32-31.0/source/Percona-Server-5.5.32-rel31.0.tar.gz" cmake
